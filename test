import tkinter as tk
from tkinter import messagebox
import re
import math

flag=False
storage='0'
is_calc = False

def check_length(value : str):
	return len(value) >= 17

def set_is_calc(value : bool):
	global is_calc
	is_calc = value
	print(f"Is calc now {is_calc}")

def get_is_calc():
	global is_calc
	print(f"Is calc is {is_calc}")
	return is_calc

def add_digit(digit):
	calc['state']=tk.NORMAL
	if(get_is_calc()):
		calc.delete(0, tk.END)
		calc.insert(0, digit)
		calc['state']=tk.DISABLED
		set_is_calc(False)
		return
	value=calc.get()
	set_is_calc(False)
	if check_length(value):
		calc['state']=tk.DISABLED
		return
	if value[-1]== ')':
		calc['state']=tk.DISABLED
		return
	if value[:3] in ['0', '-0']:
		value=''
	calc.delete(0, tk.END)
	calc.insert(0, value+digit)
	calc['state']=tk.DISABLED

def add_operation(operation):
	value=calc.get()
	if check_length(value):
		return
	if value[-1] in '-+/*':
		value=value[:-1]
	elif re.search(r'[-/\+\*]', value[1:]):
		calculate()
		value=calc.get()
	set_is_calc(False)
	calc['state']=tk.NORMAL
	calc.delete(0, tk.END)
	calc.insert(0, value+operation)
	calc['state']=tk.DISABLED
	global flag
	flag = False

def calculate():
	value=calc.get()
	if value[-1] in '-+/*':
		value=value+value[:-1]
	calc['state']=tk.NORMAL
	calc.delete(0, tk.END)
	value = value.replace('√‎', 'math.sqrt')
	try:
		res = round(eval(value), 6)
		global flag
		flag = True
		if round(res % 1, 6) == 0:
			flag = False
			res = int(res)
		calc.insert(0, res)
		set_is_calc(True)
	except (NameError, SyntaxError, ZeroDivisionError, ValueError):
		messagebox.showinfo('Внимание!', 'Ошибка!')
		calc.insert(0, 0)
	calc['state']=tk.DISABLED

def clear():
	calc['state']=tk.NORMAL
	calc.delete(0, tk.END)
	global flag
	flag=False
	calc.insert(0, 0)
	calc['state']=tk.DISABLED

def clear_symbol():
	value=calc.get()
	calc['state']=tk.NORMAL
	if len(value) == 1:
		calc.delete(0, tk.END)
		calc.insert(0, 0)
	else :
		if(value[-1]=='.'):
			global flag
			flag=False
		value=value[:-1]
		calc.delete(0, tk.END)
		calc.insert(0, value)
	calc['state']=tk.DISABLED

def dot():
	value=calc.get()
	calc['state']=tk.NORMAL
	global flag
	if not flag and value[-1].isdigit():
		calc.delete(0, tk.END)
		calc.insert(0, value+'.')
		set_is_calc(False)
		flag=True
	calc['state']=tk.DISABLED

def negative():
	calc['state']=tk.NORMAL
	value=calc.get()
	if  not re.search(r'[-/\+\*]', value[1:]):
		calc.delete(0, tk.END)	
		if value[0]=='-':
			calc.insert(0, value[1:])
		else:
			calc.insert(0, '-'+value)
	calc['state']=tk.DISABLED

def sqrt_f():
	value=calc.get()
	if value[-1] in '/*-+':
		clear_symbol()
		value=calc.get()
	calc['state']=tk.NORMAL
	res = re.search(r'[-]?(\d*\.)?\d+$', value)
	if(not res):
		calc['state']=tk.DISABLED
		return
	start = res.start()
	if value[start] == '-':
		start+=1
	value = '{}{}{}{}'.format(value[:start], '√‎(', value[start:],')')
	calc.delete(0, tk.END)
	calc.insert(0, value)
	calc['state']=tk.DISABLED

def save():
	calc['state']=tk.NORMAL
	value=calc.get()
	if not re.search(r'[-/\+\*√‎]', value[1:]):
		global storage
		storage=value
	calc['state']=tk.DISABLED

def read():
	calc['state']=tk.NORMAL
	calc.delete(0, tk.END)
	global storage
	if('.' in storage):
		global flag
		flag = True
	calc.insert(0, storage)
	calc['state']=tk.DISABLED

def sum_f():
	calc['state']=tk.NORMAL	
	value=calc.get()
	if not re.search(r'[-/\+\*√‎]', value[1:]):
		global storage
		storage = float(storage) if '.' in storage else int(storage)
		value = float(value) if '.' in value else int(value)
		storage = str(storage + value)
	calc['state']=tk.DISABLED

def sub_f():
	calc['state']=tk.NORMAL	
	value=calc.get()
	if not re.search(r'[-/\+\*√‎]', value[1:]):
		global storage
		storage = float(storage) if '.' in storage else int(storage)
		value = float(value) if '.' in value else int(value)
		storage = str(storage + value)
	calc['state']=tk.DISABLED

def make_digit_button(digit):
	return tk.Button(text=digit, font=('Arial', 13), command=lambda : add_digit(digit))

def make_operation_button(operation):
	return tk.Button(text=operation, font=('Arial', 13), command=lambda : add_operation(operation))

def make_calc_button(operation):
	return tk.Button(text=operation, font=('Arial', 13), command=calculate)

def make_clear_button(operation):
	return tk.Button(text=operation, font=('Arial', 13), command=clear)

def make_clear_symbol_button(operation):
	return tk.Button(text=operation, font=('Arial', 13), command=clear_symbol)

def make_dot_button(operation):
	return tk.Button(text=operation, font=('Arial', 13), command=dot)

def make_negative(operation):
	return tk.Button(text=operation, font=('Arial', 13), command=negative)

def make_sqrt(operation):
	return tk.Button(text=operation, font=('Arial', 13), command=sqrt_f)

def make_save(operation):
	return tk.Button(text=operation, font=('Arial', 13), command=save)

def make_read(operation):
	return tk.Button(text=operation, font=('Arial', 13), command=read)

def make_sum(operation):
	return tk.Button(text=operation, font=('Arial', 13), command=sum_f)

def make_sub(operation):
	return tk.Button(text=operation, font=('Arial', 13), command=sub_f)

def press_key(event):
	if event.char.isdigit():
		add_digit(event.char)
	elif event.char in '-+/*':
		add_operation(event.char)
	elif event.char == '\r':
		calculate()
	elif event.char == '\b':
		clear_symbol()

win=tk.Tk()
win.geometry(f"244x410+100+200")
win.resizable(width=False, height=False)
win['bg']='#C0C0C0'
win.title('Калькулэйтер')

win.bind('<Key>', press_key)

calc=tk.Entry(win, justify=tk.RIGHT, font=('Arial', 15), width=15)
calc.insert(0, '0')
calc['state']=tk.DISABLED
calc.grid(row=0, column=0, columnspan=4, stick='we', padx=5, pady=10)

make_digit_button('1').grid(row=3, column=0, stick='wens', padx=5, pady=5)
make_digit_button('2').grid(row=3, column=1, stick='wens', padx=5, pady=5)
make_digit_button('3').grid(row=3, column=2, stick='wens', padx=5, pady=5)
make_digit_button('4').grid(row=4, column=0, stick='wens', padx=5, pady=5)
make_digit_button('5').grid(row=4, column=1, stick='wens', padx=5, pady=5)
make_digit_button('6').grid(row=4, column=2, stick='wens', padx=5, pady=5)
make_digit_button('7').grid(row=5, column=0, stick='wens', padx=5, pady=5)
make_digit_button('8').grid(row=5, column=1, stick='wens', padx=5, pady=5)
make_digit_button('9').grid(row=5, column=2, stick='wens', padx=5, pady=5)
make_digit_button('0').grid(row=6, column=1, stick='wens', padx=5, pady=5)

make_operation_button('+').grid(row=2, column=3, stick='wens', padx=5, pady=5)
make_operation_button('-').grid(row=3, column=3, stick='wens', padx=5, pady=5)
make_operation_button('/').grid(row=4, column=3, stick='wens', padx=5, pady=5)
make_operation_button('*').grid(row=5, column=3, stick='wens', padx=5, pady=5)

make_calc_button('=').grid(row=6, column=2, stick='wens', padx=5, pady=5)
make_clear_button('C').grid(row=2, column=0, stick='wens', padx=5, pady=5)

make_clear_symbol_button('CE').grid(row=2, column=1, stick='wens', padx=5, pady=5)
make_dot_button('.').grid(row=6, column=0, stick='wens', padx=5, pady=5)

make_sqrt('√‎').grid(row=2, column=2, stick='wens', padx=5, pady=5)
make_negative('+\-').grid(row=6, column=3, stick='wens', padx=5, pady=5)

make_save('MS').grid(row=1, column=0, stick='wens', padx=5, pady=5)
make_read('MR').grid(row=1, column=1, stick='wens', padx=5, pady=5)
make_sum('M+').grid(row=1, column=2, stick='wens', padx=5, pady=5)
make_sub('M-').grid(row=1, column=3, stick='wens', padx=5, pady=5)

win.grid_columnconfigure(0,minsize=60)
win.grid_columnconfigure(1,minsize=60)
win.grid_columnconfigure(2,minsize=60)
win.grid_columnconfigure(3,minsize=60)

win.grid_rowconfigure(1,minsize=60)
win.grid_rowconfigure(2,minsize=60)
win.grid_rowconfigure(3,minsize=60)
win.grid_rowconfigure(4,minsize=60)
win.grid_rowconfigure(5,minsize=60)
win.grid_rowconfigure(6,minsize=60)
win.mainloop()
